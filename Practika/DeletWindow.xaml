<Window x:Class="Practika.DeletWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Удаление данных" Height="200" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock Text="Вы действительно хотите удалить выбранные данные?" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Margin="0,41,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,96,0,0">
            <Button Content="Да" Width="100" Margin="5" Name="YesButton"/>
            <Button Content="Нет" Width="100" Margin="5" Name="NoButton"/>
        </StackPanel>
    </Grid>
</Window>